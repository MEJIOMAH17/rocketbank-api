<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:id="@+id/scroll" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:padding="@dimen/activity_user_becoming_margin" android:clipChildren="false" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ru.rocketbank.core.widgets.RocketTextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/da_duration" app:rocket_font="7" style="@style/TextAppearance_RocketDeposit_HintAppearance"/>
            <android.support.v4.view.ViewPager android:id="@+id/depositsCard" android:clipChildren="false" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="100dp" android:layout_marginTop="@dimen/item_offset"/>
            <ru.rocketbank.core.widgets.RocketTextView android:textSize="16sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/activity_user_becoming_margin" android:text="@string/final_amount" app:rocket_font="7" style="@style/TextAppearance_RocketDeposit_HintAppearance"/>
            <ru.rocketbank.core.widgets.RocketEditText android:textSize="35sp" android:id="@+id/moneyEditText" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:inputType="numberDecimal" app:rocket_font="1" style="@style/RocketEditText"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/refillContainer" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ru.rocketbank.core.widgets.RocketTextView android:textSize="12sp" android:textColor="@color/black_54" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/activity_user_becoming_margin" android:text="@string/deposit_type_title" app:rocket_font="7"/>
                <ru.rocketbank.r2d2.widgets.SwitchCard android:id="@+id/refillSwitch" android:layout_width="match_parent" android:layout_height="55dp" android:layout_marginTop="@dimen/item_offset" app:cardTextSize="14sp" app:cornerRadius="3dp" app:leftText="@string/nonrefillable" app:rightText="@string/refillable" app:textColor="@color/black_54" app:thumbColor="@color/white" app:trackColor="#33999999"/>
                <ru.rocketbank.core.widgets.RocketTextView android:textSize="13sp" android:id="@+id/refillableDepositInfo" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/activity_user_becoming_margin" app:rocket_font="7" style="@style/TextAppearance_RocketDeposit_HintAppearance"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/capitalizationContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:animateLayoutChanges="true">
                <ru.rocketbank.core.widgets.RocketTextView android:textSize="12sp" android:textColor="@color/black_54" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/activity_user_becoming_margin" android:text="@string/procent_pay" app:rocket_font="7"/>
                <ru.rocketbank.r2d2.widgets.SwitchCard android:id="@+id/capitalizationSwitch" android:layout_width="match_parent" android:layout_height="55dp" android:layout_marginTop="@dimen/item_offset" app:cardTextSize="14sp" app:cornerRadius="3dp" app:leftText="@string/deposit" app:rightText="@string/deposit_card" app:textColor="@color/black_54" app:thumbColor="@color/white" app:trackColor="#33999999"/>
                <ru.rocketbank.core.widgets.RocketTextView android:textSize="14sp" android:id="@+id/capitalizationText" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/activity_user_becoming_margin" app:rocket_font="7" style="@style/TextAppearance_RocketDeposit_HintAppearance"/>
            </LinearLayout>
            <ru.rocketbank.core.widgets.RocketTextView android:textSize="13sp" android:id="@+id/info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" app:rocket_font="7" style="@style/TextAppearance_RocketDeposit_HintAppearance"/>
        </LinearLayout>
    </ScrollView>
    <android.support.v7.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardElevation="5dp">
        <android.support.constraint.ConstraintLayout android:paddingTop="@dimen/activity_user_becoming_fragment_form_caption_bottom_margin" android:paddingBottom="@dimen/activity_user_becoming_fragment_form_caption_bottom_margin" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ru.rocketbank.core.widgets.RocketTextView android:textSize="15sp" android:textColor="@color/black" android:id="@+id/percentTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_user_becoming_margin" android:text="@string/percent_title" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0" app:rocket_font="7"/>
            <ru.rocketbank.core.widgets.RocketTextView android:textSize="35sp" android:textColor="@color/black" android:id="@+id/percentTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_user_becoming_margin" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/percentTitle" app:rocket_font="7"/>
            <ru.rocketbank.core.widgets.RocketTextView android:textSize="12sp" android:textColor="#014c91" android:id="@+id/insuranceText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/activity_user_becoming_margin" android:text="@string/deposit_insurance" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/percentTitle" app:rocket_font="6"/>
            <ImageView android:layout_width="40dp" android:layout_height="wrap_content" android:layout_marginRight="@dimen/activity_horizontal_margin" android:src="@drawable/ic_vklady_zastrahovany" android:scaleType="fitCenter" android:adjustViewBounds="true" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintRight_toLeftOf="@+id/insuranceText" app:layout_constraintTop_toBottomOf="@+id/percentTitle"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
