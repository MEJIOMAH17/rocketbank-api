<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/widget_icon"/>
            <TextView android:textSize="16dp" android:textColor="@color/orange" android:id="@+id/refill" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/refill_cap" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:background="@color/gray_3" android:layout_width="match_parent" android:layout_height="1dp"/>
        <RelativeLayout android:paddingLeft="16dp" android:paddingTop="8dp" android:paddingRight="16dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/leftPart" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true">
                <TextView android:textSize="14sp" android:textColor="@color/gray_aaaaaa" android:id="@+id/rocket_money" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="26sp" android:textColor="@color/black" android:id="@+id/balance" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="14sp" android:textColor="@color/gray_aaaaaa" android:id="@+id/limit" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/rightPart" android:layout_width="wrap_content" android:layout_height="72dp" android:layout_alignParentTop="true">
                <TextView android:textSize="14sp" android:textColor="@color/gray_aaaaaa" android:id="@+id/phone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
                <ImageView android:id="@+id/operator" android:layout_width="45dp" android:layout_height="45dp" android:layout_marginBottom="4dp" android:layout_above="@+id/phone" android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
