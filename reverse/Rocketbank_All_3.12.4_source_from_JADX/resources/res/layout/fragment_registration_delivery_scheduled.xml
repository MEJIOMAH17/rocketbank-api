<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ru.rocketbank.core.widgets.RocketTextView android:textSize="20sp" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="16dp" android:text="Ожидается встреча с представителем Рокетбанка"/>
    <RelativeLayout android:paddingTop="@dimen/view_support_message_support_padding" android:paddingBottom="@dimen/view_support_message_support_padding" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="16dp">
        <RelativeLayout android:id="@+id/layout_left" android:layout_width="@dimen/view_support_message_left_margin_size" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentTop="true">
            <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/view_support_message_support_imageview_avatar" android:layout_width="@dimen/view_support_message_support_imageview_avatar_size" android:layout_height="@dimen/view_support_message_support_imageview_avatar_size" android:layout_centerHorizontal="true"/>
            <ru.rocketbank.core.widgets.RocketTextView android:textSize="@dimen/view_support_message_support_textview_avatar_text_size" android:textColor="@color/view_support_message_support_textview_avatar_text" android:id="@+id/view_support_message_support_textview_avatar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/view_support_message_support_imageview_avatar" android:layout_centerHorizontal="true" app:rocket_font="0"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1" android:layout_toRightOf="@+id/layout_left">
            <ImageView android:layout_gravity="top|left|center_vertical|center_horizontal|center" android:layout_width="@dimen/view_support_message_tail_size" android:layout_height="@dimen/view_support_message_tail_size" android:layout_marginTop="-2dp" android:layout_marginRight="-2dp" android:src="@drawable/support_dialog_left_tail" android:tint="@color/orange" android:layout_weight="0.1"/>
            <LinearLayout android:layout_gravity="top|center_vertical|center_horizontal|center" android:orientation="vertical" android:background="@color/orange" android:paddingLeft="@dimen/view_support_message_textview_message_padding" android:paddingRight="@dimen/view_support_message_textview_message_padding" android:paddingBottom="@dimen/view_support_message_textview_message_padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="0.8">
                <ru.rocketbank.core.widgets.RocketTextView android:textSize="@dimen/view_support_message_textview_message_text_size" android:textColor="@color/white" android:textColorLink="@color/view_support_message_support_textview_message_color" android:autoLink="all" android:id="@+id/view_support_message_textview_message" android:paddingTop="@dimen/view_support_message_textview_message_padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:lineSpacingExtra="@dimen/view_support_message_textview_message_line_spacing_extra"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/attach_container" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView android:layout_gravity="top|right|center_vertical|center_horizontal|center" android:visibility="invisible" android:layout_width="@dimen/view_support_message_tail_size" android:layout_height="@dimen/view_support_message_tail_size" android:layout_marginLeft="-2dp" android:layout_marginTop="-2dp" android:src="@drawable/support_dialog_right_tail" android:layout_weight="0.1"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
