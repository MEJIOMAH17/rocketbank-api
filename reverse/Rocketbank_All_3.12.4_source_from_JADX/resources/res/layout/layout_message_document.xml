<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:paddingLeft="13dp" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center_horizontal" android:id="@+id/icon" android:layout_width="@dimen/dimen_icon_size" android:layout_height="@dimen/dimen_icon_size"/>
            <ru.rocketbank.core.widgets.RocketAutofitTextView android:textSize="12sp" android:textColor="#bcbcbc" android:gravity="center" android:id="@+id/who" android:layout_width="46dp" android:layout_height="wrap_content" android:lines="3" android:singleLine="true" app:rocket_font="7"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/messageBody" android:background="@drawable/grey_bubble_support" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:id="@+id/image" android:layout_width="@dimen/doc_preview_width" android:layout_height="@dimen/doc_preview_height"/>
                <View android:background="@color/black_universal_40" android:layout_width="@dimen/doc_preview_width" android:layout_height="@dimen/doc_preview_height"/>
                <ImageView android:layout_gravity="center" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_download_support"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <ru.rocketbank.core.widgets.RocketTextView android:id="@+id/status" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>
