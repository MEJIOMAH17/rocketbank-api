<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar android:theme="@style/AppTheme_AppBarOverlay" android:id="@+id/toolbar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:title="@string/open_deposit" app:layout_scrollFlags="4" app:popupTheme="@style/AppTheme_PopupOverlay">
        <ProgressBar android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/summ_status" android:visibility="gone" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginRight="24dp"/>
    </android.support.v7.widget.Toolbar>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <RelativeLayout android:padding="8dp" android:paddingTop="21dp" android:layout_width="match_parent" android:layout_height="match_parent" android:animateLayoutChanges="true">
            <RelativeLayout android:id="@+id/content" android:padding="7dp" android:paddingTop="21dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:animateLayoutChanges="true">
                <ru.rocketbank.core.widgets.RocketTextInputLayout android:textColorHint="@color/gray_bc" android:id="@+id/input_layout_amount" android:layout_width="match_parent" android:layout_height="wrap_content" app:errorTextAppearance="@style/TextAppearance_RocketDeposit_ErrorAppearance" app:hintTextAppearance="@style/TextAppearance_RocketDeposit_HintAppearance" app:hint_font="7" app:rocket_font="7">
                    <ru.rocketbank.core.widgets.RocketEditText android:textSize="16sp" android:id="@+id/amount" android:background="@drawable/underline_green" android:paddingTop="11dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/deposit_amount" android:inputType="numberDecimal" android:imeOptions="actionNext" app:rocket_font="7"/>
                </ru.rocketbank.core.widgets.RocketTextInputLayout>
                <ru.rocketbank.core.widgets.RocketTextView android:textColor="@color/orange" android:layout_gravity="top" android:id="@+id/currency_button" android:background="?android:attr/selectableItemBackground" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" app:rocket_font="7"/>
                <ru.rocketbank.core.widgets.RocketTextView android:textSize="12sp" android:textColor="@color/gray_bc" android:id="@+id/sourceTitle" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:text="@string/source_deposit" android:layout_below="@+id/input_layout_amount" app:rocket_font="7"/>
                <Spinner android:textColor="@color/black_universal" android:textColorHint="@color/black_universal_50" android:id="@+id/input_from" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/sourceTitle" android:spinnerMode="dropdown" style="@style/RocketSpinner_Underlined"/>
                <ru.rocketbank.core.widgets.RocketTextView android:textSize="14sp" android:id="@+id/refillInformation" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_below="@+id/input_from" app:rocket_font="2"/>
            </RelativeLayout>
            <android.support.v7.widget.CardView android:id="@+id/detailCard" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_below="@+id/content" app:cardElevation="2dp">
                <ru.rocketbank.core.widgets.RocketTextView android:id="@+id/minimal" android:background="@color/white" android:paddingLeft="15dp" android:paddingTop="21dp" android:paddingRight="15dp" android:paddingBottom="21dp" android:layout_width="match_parent" android:layout_height="match_parent"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView android:id="@+id/openCard" android:layout_width="match_parent" android:layout_height="43dp" android:layout_marginTop="103dp" android:layout_below="@+id/detailCard" app:cardElevation="2dp">
                <ru.rocketbank.core.widgets.RocketTextView android:textColor="@color/white" android:gravity="center" android:id="@+id/open" android:background="@color/orange" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/open" app:rocket_font="1"/>
            </android.support.v7.widget.CardView>
            <ru.rocketbank.core.widgets.RocketTextView android:textSize="14sp" android:textColor="@color/orange" android:id="@+id/full_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="21sp" android:text="@string/deposit_full" android:layout_below="@+id/openCard" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
