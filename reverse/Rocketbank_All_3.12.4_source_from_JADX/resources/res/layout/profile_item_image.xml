    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:layout_toRightOf="@+id/image">
        <ru.rocketbank.core.widgets.RocketTextView android:textSize="16sp" android:textColor="#d6000000" android:id="@+id/value" android:layout_width="wrap_content" android:layout_height="wrap_content" app:rocket_font="7"/>
        <ru.rocketbank.core.widgets.RocketTextView android:textSize="14sp" android:textColor="#8a000000" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" app:rocket_font="7"/>
    </LinearLayout>
</RelativeLayout>
