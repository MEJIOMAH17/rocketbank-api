<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true" android:height="@dimen/migration_button_height">
        <layer-list>
            <item android:top="40dp" android:bottom="10dp">
                <shape android:shape="rectangle">
                    <gradient android:startColor="@android:color/transparent" android:endColor="#88333333" android:angle="90"/>
                </shape>
            </item>
            <item android:top="10dp" android:bottom="10dp">
                <shape android:shape="rectangle">
                    <corners android:radius="3dp"/>
                    <solid android:color="@color/orange"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true" android:height="@dimen/migration_button_height">
        <layer-list>
            <item android:top="40dp" android:bottom="0dp">
                <shape android:shape="rectangle">
                    <gradient android:startColor="@android:color/transparent" android:endColor="#88333333" android:angle="90"/>
                </shape>
            </item>
            <item android:top="10dp">
                <shape android:shape="rectangle">
                    <corners android:radius="3dp"/>
                    <solid android:color="@color/orange"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false" android:height="@dimen/migration_button_height">
        <layer-list>
            <item android:top="40dp" android:bottom="0dp">
                <shape android:shape="rectangle">
                    <gradient android:startColor="@android:color/transparent" android:endColor="#88333333" android:angle="90"/>
                </shape>
            </item>
            <item android:top="10dp">
                <shape android:shape="rectangle">
                    <corners android:radius="3dp"/>
                    <solid android:color="@color/gray60"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:height="@dimen/migration_button_height">
        <layer-list>
            <item android:top="40dp" android:bottom="5dp">
                <shape android:shape="rectangle">
                    <gradient android:startColor="@android:color/transparent" android:endColor="#88333333" android:angle="90"/>
                </shape>
            </item>
            <item android:top="10dp" android:bottom="10dp">
                <shape android:shape="rectangle">
                    <corners android:radius="3dp"/>
                    <solid android:color="@color/orange"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
