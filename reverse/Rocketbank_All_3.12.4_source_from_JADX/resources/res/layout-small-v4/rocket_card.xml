<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <android.support.v7.widget.CardView android:layout_gravity="center_horizontal" android:id="@+id/cardView" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="8dp" app:cardBackgroundColor="@color/white" app:cardCornerRadius="@dimen/rocket_card_corner_radius" app:cardElevation="2dp">
        <ImageView android:id="@+id/imageViewBackground" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY" android:adjustViewBounds="true"/>
        <RelativeLayout android:orientation="vertical" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <ru.rocketbank.core.widgets.RocketTextView android:textSize="16sp" android:textColor="@color/rocketBlack" android:id="@+id/textViewNewCard" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="20dp" android:text="@string/new_card_caption"/>
            <ru.rocketbank.core.widgets.RocketEditText android:textSize="@dimen/card_edit_text_textsize_small" android:textColor="@color/black_universal" android:textColorHint="#cccccc" android:ellipsize="none" android:id="@+id/editTextCardNumber" android:background="@drawable/card_edit_text_background" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="@dimen/card_edit_text_height_small" android:layout_marginTop="80dp" android:hint="0000 0000 0000 0000" android:singleLine="true" android:maxLength="23" android:layout_centerVertical="true" android:imeOptions="actionNext" app:rocket_font="3"/>
            <ru.rocketbank.core.widgets.RocketTextView android:textSize="9sp" android:textColor="@color/red_delete" android:gravity="center" android:id="@+id/status_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="24dp" android:layout_below="@+id/editTextCardNumber" android:layout_alignParentBottom="true"/>
            <RelativeLayout android:id="@+id/extra_pannel" android:paddingBottom="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_alignParentBottom="true">
                <ru.rocketbank.core.widgets.RocketTextView android:textSize="13sp" android:textColor="@color/black_universal" android:gravity="center" android:id="@+id/textViewYearMonth" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/valid_thru" android:lines="2"/>
                <ru.rocketbank.core.widgets.RocketEditText android:textSize="@dimen/card_edit_text_textsize_small" android:textColor="@color/black_universal" android:textColorHint="#cccccc" android:gravity="center" android:id="@+id/editTextYearMonth" android:background="@drawable/card_edit_text_background" android:padding="5dp" android:layout_width="90dp" android:layout_height="@dimen/card_edit_text_height_small" android:layout_marginLeft="12dp" android:layout_marginRight="10dp" android:hint="00/00" android:singleLine="true" android:maxLength="5" android:digits="01234567890/" android:layout_toRightOf="@+id/textViewYearMonth" android:inputType="number" android:imeOptions="actionNext" app:rocket_font="3"/>
                <ru.rocketbank.core.widgets.RocketTextView android:textSize="13sp" android:textColor="@color/black_universal" android:gravity="center" android:id="@+id/textViewCvv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:minWidth="10dp" android:text="@string/cvv" android:lines="1" android:layout_toLeftOf="@+id/editTextCvv" android:layout_toRightOf="@+id/editTextYearMonth" android:layout_alignBaseline="@+id/editTextCvv"/>
                <ru.rocketbank.core.widgets.RocketEditText android:textSize="@dimen/card_edit_text_textsize_small" android:textColor="@color/black_universal" android:textColorHint="#cccccc" android:gravity="center" android:id="@+id/editTextCvv" android:background="@drawable/card_edit_text_background" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="@dimen/card_edit_text_height_small" android:layout_marginLeft="5dp" android:hint="000" android:singleLine="true" android:maxLength="3" android:layout_alignParentRight="true" android:inputType="number" android:imeOptions="actionDone" app:rocket_font="3"/>
            </RelativeLayout>
        </RelativeLayout>
        <ImageView android:id="@+id/imageViewCardBank" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>
</merge>
